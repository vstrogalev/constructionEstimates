{
  "include": ["src", "declarations.d.ts"],
  "exclude": [
    "node_modules"
  ],
  "files": ["declarations.d.ts"],
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src"
  }
}
